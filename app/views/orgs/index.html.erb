




<div class ='row'>
	<div class ="col-md-6 ">
	<h3>Hi <%=current_user.first_name%> <%= current_user.last_name %>!</h3>
	<h4>Here are the Organizations you can join:</h4> <br>

		<% @orgs.each do |t| %>
				<%=link_to t.name, org_path(t)%> <%= link_to 'delete', org_path(t), :method => 'delete' if t.owner_id == current_user.id%><br>
				Members: <%= t.users.count %> <br>
				<%= t.description %> <br><br>

		<% end %>
	</div>

	<div class="col-md-6 bordered">
		<h3>Create a new organization</h3>
		<%= flash[:alert] if flash[:alert] %>


		
		<%= bootstrap_form_for @org do |t| %>
			<%= t.text_field :name %> 
			<%= t.text_area :description %>
			<%=t.submit 'Create', class: 'btn pull-right' %>
		<% end %>


	</div>
</div>